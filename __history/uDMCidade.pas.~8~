function TDM_CIDADES.Sql_Consulta: String;
begin

   Result := 'SELECT CADCIDADE.IDCIDADE,     '+
             '         CADCIDADE.NMCIDADE,   '+
             '         CADUF.SGESTADO        '+
             '  FROM CADCIDADE               '+
             '  INNER JOIN CADUF ON CADUF.IDUF = CADCIDADE.IDUF ';


end;

end.
